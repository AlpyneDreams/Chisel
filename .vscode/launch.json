{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Chisel",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/runtime/chisel",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/runtime",
            "environment": [],
            "linux": {
                "externalConsole": false,
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ],    
            },
            "windows": {
                "type": "cppvsdbg",
                "console": "integratedTerminal"
            }
        },
    ]
}