    "version": "0.2.0",
    "configurations": [
        {
            "name": "Engine",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/runtime/engine",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/runtime",
            "environment": [],
            "linux": {
                "externalConsole": false,
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ],    
            },
            "windows": {
                "type": "cppvsdbg",
                "console": "integratedTerminal"
            }
        },
